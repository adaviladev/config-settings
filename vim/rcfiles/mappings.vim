" Leader
nmap <Leader>ev :e $MYVIMRC<CR>
nmap <Leader>. :e .<CR>
nnoremap <Leader>u :UndotreeShow<CR>

" Copy-Paste
noremap <Leader>y "*y
noremap <Leader>p "*p
noremap <Leader>Y "*Y
noremap <Leader>P "*P

" Split navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nmap n nzz
nmap N Nzz
